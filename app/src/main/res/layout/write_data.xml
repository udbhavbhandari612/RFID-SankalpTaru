<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/editTextBeneficiariesName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Enter Beneficiary Name (64 characters)"
        android:inputType="textPersonName"
        android:maxLength="32" />

    <EditText
        android:id="@+id/editTextTreeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Enter Tree ID (16 characters)"
        android:inputType="number"
        android:maxLength="16" />

    <EditText
        android:id="@+id/editTextSpecies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Enter Species (64 characters)"
        android:inputType="textPersonName"
        android:maxLength="16" />

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:enabled="false"
        android:gravity="start|top"
        android:hint="Click below to capture current location"
        android:inputType="textMultiLine"
        android:textSize="16sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnLocationFetch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:drawableLeft="@android:drawable/ic_menu_mylocation"
                android:drawableTint="@android:color/holo_blue_dark"
                android:text="Fetch Location"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnLocationClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                android:drawableTint="#FF5722"
                android:text="Clear location"
                android:textSize="12sp" />
        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/editTextTreeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Enter Tree Name (64 characters)"
        android:inputType="textPersonName"
        android:maxLength="16" />


    <EditText
        android:id="@+id/editTextTreeUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Enter Tree URL (256 characters)"
        android:inputType="textPersonName"
        android:maxLength="128" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDateofPlantation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pick a Plantation Date"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnDateofPlantation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:drawableLeft="@drawable/calendar_2" />

    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Note: Fill only the fields which you want to update" />

</LinearLayout>